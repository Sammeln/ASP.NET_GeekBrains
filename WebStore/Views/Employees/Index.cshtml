@model IEnumerable<EmployeeViewModel>
@{
    ViewBag.Title = "Сотрудники";
}
<div class="container">
    <h2>Сотрудники</h2>
    <table class="table table-condensed">
        <tr>
            <td>Id</td>
            <td>Имя</td>
            <td>Фамилия</td>
            <td>Возраст</td>
            <td></td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                @*<td>@Html.ActionLink("Подробнее", "Details", new { id = item.Id })</td>*@
                <td><a asp-action="Details" asp-route-id="@item.Id">Подробнее</a></td>
            </tr>
        }
    </table>
</div>