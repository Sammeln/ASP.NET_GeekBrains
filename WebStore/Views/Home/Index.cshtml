@model IEnumerable<WebStore.Models.EmployeeViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <link type="text/css" rel="stylesheet" href="~/Content/CSS/StyleSheet.css" />
    <title>Index</title>
</head>
<body>
    <h2>Сотрудники</h2>
    <table>
        <tr>
            <td>Id</td>
            <td>Имя</td>
            <td>Фамилия</td>
            <td>Возраст</td>
            <td></td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Age</td>
                <td>@Html.ActionLink("Подробнее", "Details", new { id = item.Id })</td>
            </tr>
        }
    </table>
</body>
</html>
